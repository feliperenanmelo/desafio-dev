@model Bycoders.DesafioDev.App.Models.ImportacaoViewModel;

@{
    ViewData["Title"] = "Importação financeira por arquivo";
}

<div class="container" style=" padding-top: 20px">

    <h3 style="padding-top: 50px">@ViewData["Title"] </h3>
    <hr />   

    <div class="row">
        <div class="col-md-5">
            <form enctype="multipart/form-data" asp-action="Create">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                
                <div class="form-group">
                    <label asp-for="File" class="control-label"></label>

                    <div class="custom-file">
                        <input type="file" class="custom-file-input" id="ImagemUpload" asp-for="File">
                        <label data-browse="Procurar" style="width: 400px" class="custom-file-label" for="ImagemUpload"></label>
                        <label style="display: none" id="img_nome"></label>
                    </div>                    
                </div>                
                <div class="form-group">
                    <input type="submit" value="Salvar" class="btn btn-success" />                    
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {

    <script>
        $("#ImagemUpload").change(function () {
            $("#img_nome").text(this.files[0].name);
            $("#img_nome")[0].style.display = 'block';
        });
    </script>
}